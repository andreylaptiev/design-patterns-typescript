{
  "extends": "@tsconfig/recommended/tsconfig.json",

  "ts-node": {
    "files": true,
    // compilerOptions *only* for ts-node
    "compilerOptions": {}
  },

  // compilerOptions *only* for tsc
  "compilerOptions": {
    "strictNullChecks": true,
    "noImplicitAny": true,
  },

  "include": ["./**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}